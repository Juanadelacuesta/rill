%div.row
  %div.col-md-10
    %h2
      %strong Title:
      = @section.title
    %h4
      %strong Chapter:
      = @chapter.title
  %div.col-md-2
    = link_to 'Edit', edit_chapter_section_path(@chapter, @section), class: "btn btn-primary"
    = link_to 'Destroy', chapter_section_path(@chapter, @section), method: :delete, data: { confirm: "Are you sure you want to delete chapter `#{ @chapter }`?" }, class: "btn btn-danger"

%p
  = @chapter.description


=render 'subsections/index'
