%form.form-horizontal#question-form{action: chapter_section_question_path(@chapter,@section,@question), role: :form}
  %div.row
    %div.col-md-10
      %h2 Editing question
    %div.col-md-2
      %span.btn.btn-lg.btn-primary.save Save
      %br
      %small
        Saved on:
        %div#edit-time= l @question.updated_at, format: :long

  %div.row
    %div.col-md-6
      = text_area :question, :text, style: "width: 100%", rows: 20

      %div.panel.panel-default
        %div.panel-heading
          %div.col-md-3
            %select.form-control#input-type
              %option line-input
              %option multiple-choice
          %span.btn.btn-default#add-input{data: { url: inputs_path(question_id: @question.to_param) } } Add

        %div.panel-body#inputs-list
          -@question.inputs.each do |input|
            =render partial: 'inputs/edit', locals: {input: input}

    %div.col-md-6
      - url = preview_chapter_section_question_path(@chapter, @section, @question)
      %div.panel.panel-default
        %div.panel-body
          %iframe.fill.col-md-12{id: "preview", data: {url: url}, src: url, style: "min-height: 800px;" }
