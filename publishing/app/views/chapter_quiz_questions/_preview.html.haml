%div.panel.panel-default
  %div.panel-heading Question preview
  %div.panel-body
    - url = preview_content_chapter_chapter_quiz_chapter_questions_set_question_path(@chapter, @chapter_questions_set, @question)
    %iframe.fill.col-md-12{id: "preview_content", data: {url: url}, src: url, style: "min-height: 400px;" }

- url = error_content_chapter_chapter_quiz_chapter_questions_set_question_path(@chapter, @chapter_questions_set, @question)
%div{id: "error_content", data: {url: url}}
  = render partial: 'error_content'
