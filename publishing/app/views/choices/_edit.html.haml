%div{id: "choice-#{choice.id}"}
  %div.col-md-9
    =text_area_tag "multiple_choice_inputs[#{input.id}][choices][#{choice.id}][value]", choice.value, cols: 50, class: "form-control"
  %div.col-md-1
    =radio_button_tag "multiple_choice_inputs[#{input.id}][choices][#{choice.id}][correct]", 1, choice.correct
  %div.col-md-2
    %span.btn.btn-default.glyphicon.glyphicon-minus.delete-choice{data: { item: "choice-#{ choice.id }", url: input_choice_path(input, choice, question_id: @question.to_param) } }
