- if @course
  %div.row
    %div.col-md-10
      %h2
        %strong Chapters
    %div.col-md-2
      = link_to 'New Chapter', new_chapter_path, class: "btn btn-success"

  %table.table.table-striped
    %thead
      %tr
        %th Title
        %th Description
        %th Order
        %th Published
        %th Actions

    %tbody
      -@chapters.each do |chapter|
        %tr
          %td= link_to chapter.title, chapter
          %td= chapter.description
          %td
            =link_to movedown_chapter_path(chapter), method: :post do
              %span.glyphicon.glyphicon-arrow-down
            =link_to moveup_chapter_path(chapter), method: :post do
              %span.glyphicon.glyphicon-arrow-up
          %td
            -if chapter.active?
              =link_to deactivate_chapter_path(chapter), method: :post do
                %span.glyphicon.glyphicon-eye-open
            -else
              =link_to activate_chapter_path(chapter), method: :post do
                %span.glyphicon.glyphicon-ban-circle
          %td
            = link_to edit_chapter_path(chapter) do
              %span.glyphicon.glyphicon-pencil
            =link_to chapter_path(chapter), method: :delete, data: { confirm: "Are you sure you want to delete chapter `#{ chapter }`?" } do
              %span.glyphicon.glyphicon-trash
