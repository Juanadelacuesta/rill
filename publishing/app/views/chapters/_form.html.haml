= form_for(@chapter, html: {class: "form-horizontal", role: "form"}) do |f|
  - if @chapter.errors.any?
    %div.error_explanation
      %h2= #{ pluralize(@chapter.errors.count, "error") } prohibited this chapter from being saved:
      %ul
        - @chapter.errors.full_messages.each do |message|
          %li= message

  %div.form-group
    = f.label :title, class: "col-sm-2 control-label"
    %div.col-sm-10
      = f.text_field :title, size: 20, class: "form-control", tabindex: 1

  %div.form-group
    = f.label :description, class: "col-sm-2 control-label"
    %div.col-sm-10
      = f.text_area :description, cols: 20, rows: 20, class: "form-control", tabindex: 4

  - if @chapter.id
    %div.form-group
      %div.col-sm-offset-2.col-sm-10
        = link_to 'cancel', @chapter, class: "btn btn-default", tabindex: 3
        = submit_tag('update', class: "btn btn-primary", tabindex: 2)
  - else
    %div.form-group
      %div.col-sm-offset-2.col-sm-10
        = link_to 'cancel', chapters_path, class: "btn btn-default", tabindex: 3
        = submit_tag('save', class: "btn btn-primary", tabindex: 2)
