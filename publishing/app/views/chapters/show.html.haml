-if @chapter.active?
  = link_to 'Deactivate', deactivate_chapter_path(@chapter), method: :post, class: "btn btn-warning"
- else
  = link_to 'Activate', activate_chapter_path(@chapter), method: :post, class: "btn btn-info"

%p
  %strong Title:
  = @chapter.title
%p
  %strong Description:
  = @chapter.description

= link_to 'Back', chapters_path, class: "btn btn-default"
= link_to 'Edit', edit_chapter_path(@chapter), class: "btn btn-primary"
= link_to 'Destroy', @chapter, method: :delete, data: { confirm: "Are you sure you want to delete chapter `#{ @chapter }`?" }, class: "btn btn-danger"

%br
