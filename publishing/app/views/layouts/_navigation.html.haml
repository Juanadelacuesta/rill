-# navigation styled for Bootstrap 3.0
%nav.navbar.navbar-inverse.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Home', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'

      %ul.nav.navbar-nav.navbar-right
        %li
          =form_for(Course.current||Course.new, url: select_courses_path, method: :post, html: {id: "course_select", class: "navbar-form form-inline"}) do |f|
            =f.collection_select(:id, Course.all, :id, :name, {include_blank: 'choose course'}, {onchange: "submit()", class: "form-control"})
